{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "question.schema.json",
  "title": "Question",
  "description": "Moodle Question Info",
  "type": "object",
  "required": [
    "name",
    "prompt"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the Question"
    },
    "prompt": {
      "$ref": "components/unresolvedMarkup.schema.json"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "idnumber": {
      "type": "string",
      "description": "This string can be used as an additional unique identification token â€“ but is not used formally by Moodle to uniquely identify questions. Moodle behaves strangely if these are not site-wide unique."
    }
  }
}
