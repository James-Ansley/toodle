{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/James-Ansley/toodle/main/src/toodle/schemata/coderunner-schema.json",
  "title": "Coderunner Question",
  "description": "A Coderunner Question Config",
  "type": "object",
  "required": ["qtype", "coderunnertype", "precheck", "testcases"],
  "properties": {
    "qtype": {
      "description": "The question type",
      "type": "string",
      "enum": ["coderunner"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "coderunnertype": {
      "type": "string",
      "description": "The Coderunner question prototype",
      "enum": ["python3", "python3_w_input"]
    },
    "precheck": {
      "type": "string",
      "enum": ["disabled", "empty", "examples", "selected", "all"]
    },
    "testcases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["example", "display", "testcode", "stdin", "expected"],
        "properties": {
          "example": {
            "type": "boolean"
          },
          "display": {
            "type": "string",
            "enum": ["SHOW", "HIDE", "HIDE_IF_FAIL", "HIDE_IF_SUCCEED",
                     "show", "hide", "hide_if_fail", "hide_if_succeed"]
          },
          "testcode": {"type": "string"},
          "stdin": {"type": "string"},
          "expected": {"type": "string"}
        }
      }
    }
  }
}
