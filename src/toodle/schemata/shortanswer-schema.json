{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/James-Ansley/toodle/main/src/toodle/schemata/shortanswer-schema.json",
  "title": "ShortAnswer Question",
  "description": "A Short Answer Question Config",
  "type": "object",
  "required": ["qtype", "casesensitivity", "penalty", "answers"],
  "properties": {
    "qtype": {
      "description": "The question type",
      "type": "string",
      "enum": [
        "shortanswer"
      ]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "casesensitivity": {
      "type": "boolean"
    },
    "penalty": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "answers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["grade", "text"],
        "properties": {
          "grade": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          },
          "text": {
            "type": "string"
          },
          "feedback": {
            "type": "string"
          }
        }
      }
    }
  }
}
